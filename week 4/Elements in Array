echo "Enter the number of elements in the array: "
read n
arr=()
for ((i = 0; i < n; i++)); do
    echo "Enter element $((i + 1)): "
    read element
    arr+=("$element")  # Append the element to the array
done
echo "The elements in the array are: ${arr[@]}"

---output----

