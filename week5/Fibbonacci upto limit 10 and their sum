limit=10
a=0
b=1
sum=0
echo "Fibonacci series upto  $limit:"
for (( i=0;i<limit;i++ ));do
        echo -n "$a"
        sum=$((sum +a))
        next=$((a +b))
        a=$b
        b=$next
done
echo ""
echo "The sum of the fibbonacci up to $limit is :$sum"


----output-----

Fibonacci series upto  10:
0112358132134
The sum of the fibbonacci up to 10 is :88
